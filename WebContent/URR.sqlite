DROP TABLE IF EXISTS "Notificacao";
CREATE TABLE `Notificacao` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	`data`	TEXT,
	`tipo`	TEXT,
	`historico`	TEXT,
	`UpaCrs`	INTEGER,
	`Paciente`	INTEGER,
	`Plantonista`	INTEGER,
	
	FOREIGN KEY(UpaCrs) REFERENCES UpaCrs(id),
	FOREIGN KEY(Paciente) REFERENCES Paciente(id),
	FOREIGN KEY(Plantonista) REFERENCES Plantonista(id)
);
DROP TABLE IF EXISTS "Paciente";
CREATE TABLE `Paciente` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	`nome`	TEXT,
	`cpf`	TEXT,
	`rg`	TEXT,
	`endereco`	TEXT,
	`dataDeNacimento`	TEXT,
	`telefone`	TEXT,
	`numeroProntuario`	TEXT
);
DROP TABLE IF EXISTS "Plantonista";
CREATE TABLE `Plantonista` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	`nome`	TEXT,
	`telefone`	TEXT,
	`lotacao`	TEXT
);
DROP TABLE IF EXISTS "UpaCrs";
CREATE TABLE "UpaCrs" (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	`telefone`	TEXT,
	`endereco`	TEXT
);
